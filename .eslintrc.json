{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "semi": "error",
        "indent": ["error", 4],
        "no-unused-vars": "warn",
        "linebreak-style": ["error", "unix"]
    }
}
